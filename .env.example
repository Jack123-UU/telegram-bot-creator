# TeleBot Sales Platform Environment Configuration

# Telegram Bot Configuration
BOT_TOKEN=your-telegram-bot-token-here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook

# Database Configuration  
DATABASE_URL=postgresql://telebot:dev_password_123@postgres:5432/telebot_sales
POSTGRES_DB=telebot_sales
POSTGRES_USER=telebot
POSTGRES_PASSWORD=dev_password_123

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# HashiCorp Vault Configuration
VAULT_ADDR=http://vault:8200
VAULT_TOKEN=dev-root-token

# TRON Blockchain Configuration
TRON_NODE_URL=https://api.trongrid.io
TRON_PRIVATE_KEY=your-tron-private-key-here
PAYMENT_ADDRESS=TYourTronPaymentAddressHere

# MinIO/S3 Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET=telebot-files

# API Configuration
API_BASE_URL=http://backend:8000
API_INTERNAL_TOKEN=dev-internal-token-secure-123

# Security Configuration
ENCRYPTION_KEY=your-32-byte-encryption-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Payment Configuration
PAYMENT_TIMEOUT_MINUTES=15
MIN_CONFIRMATIONS=1
MONITOR_INTERVAL=30

# Feature Flags
ENABLE_WEBHOOKS=false
ENABLE_METRICS=true
ENABLE_AUDIT_LOGS=true

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourdomain.com

# Monitoring Configuration (Optional)
SENTRY_DSN=your-sentry-dsn-here
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.session,.tdata,.zip,.json

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,zh

# Production Overrides (uncomment for production)
# ENVIRONMENT=production
# DEBUG=false
# LOG_LEVEL=WARNING
# ENABLE_WEBHOOKS=true
# DATABASE_URL=postgresql://user:secure_password@prod-db:5432/telebot_sales
# REDIS_URL=redis://prod-redis:6379/0
# VAULT_ADDR=https://vault.yourdomain.com
# TRON_NODE_URL=https://your-tron-node.com